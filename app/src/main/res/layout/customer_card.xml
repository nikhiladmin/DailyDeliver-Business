<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:fadingEdgeLength="10dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/custprofilepic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/profile001" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/custprofilepic"
                    android:fontFamily="@font/productsans_regular"
                    android:gravity="center_horizontal"
                    android:text="Customer name"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_name"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/custprofilepic"
                    android:fontFamily="@font/productsans_regular"
                    android:gravity="start"
                    android:text="Customer address"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_address"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/custprofilepic"
                    android:fontFamily="@font/productsans_regular"
                    android:gravity="center_horizontal"
                    android:text="Product : "
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customer_address"
                    android:layout_toRightOf="@id/product"
                    android:gravity="center_horizontal"
                    android:text="Product name"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/customer_status_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/custprofilepic"
                    android:fontFamily="@font/productsans_bold"
                    android:text="Status"
                    android:textAllCaps="false" />


                <ImageView
                    android:id="@+id/call_customer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_call" />
            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>