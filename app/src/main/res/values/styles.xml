<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorGoogleLogin</item>
    </style>

    <style name="nameOfStyle">
        <item name="colorControlNormal">@color/colorLightGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Style of menu item starts-->
    <style name="SplashTheme.NoActionBarNavBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item> <!-- This line is for matching the actionbar with toolbar-->
    </style>
    <style name="menu_text">
        <item name="fontFamily">@font/productsans_regular</item>
    </style>
    <!--Menu item style ends here-->

    <style name="RadioButtonStyle" parent="SplashTheme">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    //Dialog Box
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog</item>
    </style>
</resources>
